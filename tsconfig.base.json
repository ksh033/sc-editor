{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "es",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "lib": ["ES6", "DOM", "ES2015", "ES2021"],
    "baseUrl": "./",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@sceditor/editor": ["./packages/editor/src/index.ts"],
      "@sceditor/editor-core": ["./packages/editor-core/src/index.ts"],
      "@sceditor/core": ["./packages/core/src/index.ts"]
    }
  },

  "exclude": [
    ".history",
    "node_modules",
    "**/node_modules",
    "**/examples",
    "**/dist",
    "**/fixtures",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/templates",
    "ui"
  ]
}
